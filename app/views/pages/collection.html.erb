<div id="portal_container">
  <%= link_to group_path(:group => 'ring') do %>
    <div class="collection portal">
      <%= image_tag 'RINGS.png' %>
      <div class="title">
        RINGS
      </div>
    </div>
  <% end %>

  <%= link_to group_path(:group => 'necklace') do %>
    <div class="collection portal" href="<%= group_path(:group => 'necklace') %>">
      <%= image_tag 'NECKLACES.png' %>
      <div class="title">
        NECKLACES
      </div>
    </div>
  <% end %>

  <%= link_to group_path(:group => 'bracelet') do %>
    <div class="collection portal" href="<%= group_path(:group => 'bracelet') %>">
      <%= image_tag 'BRACELETS.png' %>
      <div class="title">
        BRACELETS
      </div>
    </div>
  <% end %>
</div>

<% content_for :metatags do %>
  <%= content_tag :meta, nil, :name => 'description', :content => 'Images of rings, necklaces and bracelets from the Fall 2012 collection' %>
  <%= content_tag :meta, nil, :name => 'keywords', :content => 'necklace, necklaces, ring, rings, bracelet, bracelets, gold plated, silver plated, gunmetal plated' %>
<% end %>