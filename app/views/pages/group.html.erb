<div class="collection_pieces">
  <% @pieces.each do |piece| %>
    <%= div_for piece, :class => 'shopify_api_product' do %>
      <%= link_to image_tag(piece.images.first.src), piece.images.first.src, :class => 'fancybox', :title => piece.attributes[:title], :'data-fancybox-group' => 'gallery' %>
    <% end %>
  <% end %>
</div>
